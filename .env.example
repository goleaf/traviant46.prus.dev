################################################################################
# Application
################################################################################

# Display name used across notifications and UI chrome.
APP_NAME="TravianT Authentication"

# Environment name that controls configuration overrides (local, staging, production).
APP_ENV=local

# Encryption key for cookies and other secrets (generate via `php artisan key:generate`).
APP_KEY=

# Enables verbose error output; set to false in production.
APP_DEBUG=true

# Fully-qualified root URL used when generating links in mailers and notifications.
APP_URL=http://localhost

# Provide previous keys when rotating the APP_KEY (comma separated base64 strings).
APP_PREVIOUS_KEYS=

# Enables the Laravel Debugbar integration (null respects config/debugbar.php).
DEBUGBAR_ENABLED=null

################################################################################
# Localization
################################################################################

# Application locale for translations.
APP_LOCALE=en

# Fallback locale when translation strings are missing.
APP_FALLBACK_LOCALE=en

# Faker locale used for test data factories.
APP_FAKER_LOCALE=en_US

################################################################################
# Maintenance Mode
################################################################################

# Storage driver for maintenance mode state (file, cache, redis, database).
APP_MAINTENANCE_DRIVER=file

# Override maintenance driver store (i.e. cache store name) when using cache/redis drivers.
APP_MAINTENANCE_STORE=null

################################################################################
# PHP Runtime
################################################################################

# Worker count used by PHP built-in server (`php artisan serve`).
PHP_CLI_SERVER_WORKERS=4

# BCrypt cost factor for hashing passwords (higher is more secure but slower).
BCRYPT_ROUNDS=12

################################################################################
# Logging
################################################################################

# Primary logging channel (stack, single, errorlog, etc).
LOG_CHANNEL=stack

# Stack channels enabled when using `stack` logging.
LOG_STACK=single

# Dedicated channel for deprecation notices (null disables).
LOG_DEPRECATIONS_CHANNEL=null

# Minimum log severity (emergency, alert, critical, error, warning, notice, info, debug).
LOG_LEVEL=debug

################################################################################
# Database Connections
################################################################################

# Default connection name (sqlite, mysql, pgsql, mariadb, sqlsrv).
DB_CONNECTION=sqlite

# Hostname for relational database servers.
DB_HOST=127.0.0.1

# Port that matches the selected driver (3306 MySQL, 5432 Postgres, etc).
DB_PORT=3306

# Database name or path to SQLite file.
DB_DATABASE=database/database.sqlite

# Username for default database user.
DB_USERNAME=root

# Password for default database user.
DB_PASSWORD=

# Unix socket path for MySQL/MariaDB when applicable.
DB_SOCKET=

# Optional DSN string (takes precedence over individual host/port credentials).
DB_URL=

# Connection charset override.
DB_CHARSET=utf8mb4

# Connection collation override.
DB_COLLATION=utf8mb4_unicode_ci

# Enables SQLite foreign key constraints (true/false).
DB_FOREIGN_KEYS=true

# Enables SQL Server encryption (leave empty unless required).
DB_ENCRYPT=

# Trusts SQL Server certificates when encryption is enabled (true/false).
DB_TRUST_SERVER_CERTIFICATE=

# SSL certificate authority file for MySQL connections.
MYSQL_ATTR_SSL_CA=

# SSL certificate authority file for the legacy connection.
LEGACY_MYSQL_ATTR_SSL_CA=

################################################################################
# Legacy Travian Database (read-only mirror of classic schema)
################################################################################

# Override driver for the legacy connection (mysql, pgsql, sqlsrv).
LEGACY_DB_DRIVER=mysql

# Optional DSN for the legacy schema.
LEGACY_DB_URL=

# Hostname for the legacy schema.
LEGACY_DB_HOST=127.0.0.1

# Port for the legacy schema.
LEGACY_DB_PORT=3306

# Database name for the legacy schema.
LEGACY_DB_DATABASE=legacy_travian

# Username for the legacy schema.
LEGACY_DB_USERNAME=legacy

# Password for the legacy schema.
LEGACY_DB_PASSWORD=

# Unix socket path for the legacy schema.
LEGACY_DB_SOCKET=

# Charset for the legacy schema.
LEGACY_DB_CHARSET=utf8mb4

# Collation for the legacy schema.
LEGACY_DB_COLLATION=utf8mb4_unicode_ci

################################################################################
# Cache & Session Stores
################################################################################

# Cache driver used by the Cache facade (database, redis, file, array).
CACHE_STORE=database

# Prefix applied to cache keys (leave empty to auto-generate).
CACHE_PREFIX=

# Database connection used for the cache driver when CACHE_STORE=database.
DB_CACHE_CONNECTION=sqlite

# Table name used for database cache store.
DB_CACHE_TABLE=cache

# Connection name used for cache locks in database driver.
DB_CACHE_LOCK_CONNECTION=sqlite

# Table name used for cache locks in database driver.
DB_CACHE_LOCK_TABLE=cache_locks

# Database table name when using DynamoDB cache driver.
DYNAMODB_CACHE_TABLE=cache

# AWS endpoint override for DynamoDB cache driver.
DYNAMODB_ENDPOINT=

# Memcached host when REDIS is not used.
MEMCACHED_HOST=127.0.0.1

# Memcached port.
MEMCACHED_PORT=11211

# Persistent ID for shared Memcached connections.
MEMCACHED_PERSISTENT_ID=

# Username for SASL Memcached authentication.
MEMCACHED_USERNAME=

# Password for SASL Memcached authentication.
MEMCACHED_PASSWORD=

################################################################################
# Redis Configuration
################################################################################

# Redis client (phpredis or predis).
REDIS_CLIENT=phpredis

# Cluster mode for Redis (redis, cluster, twemproxy).
REDIS_CLUSTER=redis

# Global prefix applied to Redis keys (auto-generated when null).
REDIS_PREFIX=null

# Enables persistent connections (true/false).
REDIS_PERSISTENT=false

# Redis host for all connections.
REDIS_HOST=127.0.0.1

# Redis authentication username (if ACLs are enabled).
REDIS_USERNAME=null

# Redis authentication password.
REDIS_PASSWORD=null

# Redis TCP port.
REDIS_PORT=6379

# Database index for the default Redis connection.
REDIS_DB=0

# Database index for cache data.
REDIS_CACHE_DB=1

# Named Redis connection used by the cache store.
REDIS_CACHE_CONNECTION=cache

# Database index for session storage.
REDIS_SESSION_DB=2

# Maximum retry attempts on connection failure.
REDIS_MAX_RETRIES=3

# Backoff algorithm for retry strategy (decorrelated_jitter, exponential, etc).
REDIS_BACKOFF_ALGORITHM=decorrelated_jitter

# Initial backoff delay in milliseconds.
REDIS_BACKOFF_BASE=100

# Maximum backoff delay in milliseconds.
REDIS_BACKOFF_CAP=1000

# Named cache store used for sessions (must match config/session.php).
REDIS_SESSION_CACHE=session

# Redis connection used for acquiring session locks.
REDIS_SESSION_LOCK_CONNECTION=session

# Redis connection used for acquiring cache locks.
REDIS_CACHE_LOCK_CONNECTION=cache

################################################################################
# Session Management
################################################################################

# Session driver (file, cookie, database, redis, array).
SESSION_DRIVER=redis

# Connection/store name when using redis or database sessions.
SESSION_CONNECTION=session

# Lifetime in minutes before sessions expire.
SESSION_LIFETIME=120

# Encrypt session payloads when stored.
SESSION_ENCRYPT=false

# Session cookie path.
SESSION_PATH=/

# Session cookie domain (null = use APP_URL host).
SESSION_DOMAIN=null

# Set to true to only transmit cookies over HTTPS.
SESSION_SECURE_COOKIE=false

# Controls SameSite attribute (lax, strict, none, null).
SESSION_SAME_SITE=lax

# Set to true to make cookies inaccessible to JavaScript.
SESSION_HTTP_ONLY=true

# Set to true to destroy session on browser close.
SESSION_EXPIRE_ON_CLOSE=false

# Session store name when using cache repositories.
SESSION_STORE=

# Database table when using database session driver.
SESSION_TABLE=sessions

# Partition cookies per domain when using Chrome's cookies partitioning.
SESSION_PARTITIONED_COOKIE=false

################################################################################
# Broadcasting & Filesystem
################################################################################

# Broadcast driver (log, pusher, redis, null).
BROADCAST_CONNECTION=log

# Default filesystem disk (local, public, s3, etc).
FILESYSTEM_DISK=local

################################################################################
# Queueing & Events
################################################################################

# Default queue driver (sync, database, redis, sqs, beanstalkd).
QUEUE_CONNECTION=database

# Queue name used for default driver.
DB_QUEUE=default

# Database connection used for the queue driver.
DB_QUEUE_CONNECTION=sqlite

# Database table used for queued jobs.
DB_QUEUE_TABLE=jobs

# Seconds before database queue job is retried.
DB_QUEUE_RETRY_AFTER=90

# Name of the queue used when storing failed jobs.
QUEUE_FAILED_DRIVER=database-uuids

# Default Redis queue name.
REDIS_QUEUE=default

# Redis connection used for queue jobs.
REDIS_QUEUE_CONNECTION=redis

# Seconds before Redis queue job is retried.
REDIS_QUEUE_RETRY_AFTER=90

# Beanstalkd host if using the beanstalkd driver.
BEANSTALKD_QUEUE_HOST=localhost

# Beanstalkd default tube name.
BEANSTALKD_QUEUE=default

# Seconds before a Beanstalkd job is retried.
BEANSTALKD_QUEUE_RETRY_AFTER=90

# SQS prefix URL when using Amazon SQS.
SQS_PREFIX=https://sqs.us-east-1.amazonaws.com/your-account-id

# SQS default queue name.
SQS_QUEUE=default

# SQS suffix appended to queue names (optional).
SQS_SUFFIX=

# Queue name dedicated to provisioning jobs.
PROVISIONING_QUEUE=provisioning

################################################################################
# Provisioning API
################################################################################

# Base URL for the infrastructure provisioning API.
PROVISIONING_API_BASE_URL=https://infrastructure.example.com

# API token for provisioning requests.
PROVISIONING_API_TOKEN=

# Timeout in seconds for provisioning API requests.
PROVISIONING_API_TIMEOUT=30

################################################################################
# Mail
################################################################################

# Default mail transport (smtp, ses, mailgun, resend, log, array).
MAIL_MAILER=log

# Optional SMTP URL (takes precedence over individual host/port settings).
MAIL_URL=

# Scheme/protocol for SMTP URLs (tls, ssl).
MAIL_SCHEME=null

# Override EHLO domain when required by provider.
MAIL_EHLO_DOMAIN=

# SMTP host name.
MAIL_HOST=127.0.0.1

# SMTP port.
MAIL_PORT=2525

# SMTP username.
MAIL_USERNAME=null

# SMTP password.
MAIL_PASSWORD=null

# Channel used when MAIL_MAILER=log.
MAIL_LOG_CHANNEL=stack

# Absolute path to the sendmail binary when using the sendmail driver.
MAIL_SENDMAIL_PATH=/usr/sbin/sendmail -bs

# Global "from" email address.
MAIL_FROM_ADDRESS="hello@example.com"

# Global "from" name (defaults to APP_NAME).
MAIL_FROM_NAME="${APP_NAME}"

# Optional Postmark message stream identifier.
POSTMARK_MESSAGE_STREAM_ID=

# Postmark server token for API requests.
POSTMARK_TOKEN=

# Resend API key for transactional email.
RESEND_KEY=

# Slack bot OAuth token for notifications.
SLACK_BOT_USER_OAUTH_TOKEN=

# Default Slack channel for bot notifications.
SLACK_BOT_USER_DEFAULT_CHANNEL=

################################################################################
# Cloud Storage
################################################################################

# AWS access key for S3 and other AWS services.
AWS_ACCESS_KEY_ID=

# AWS secret access key.
AWS_SECRET_ACCESS_KEY=

# Default AWS region.
AWS_DEFAULT_REGION=us-east-1

# Default S3 bucket used for the storage driver.
AWS_BUCKET=

# Forces path-style endpoints (useful for MinIO/Localstack).
AWS_USE_PATH_STYLE_ENDPOINT=false

################################################################################
# Automation & Scheduler
################################################################################

# Local time when daily quests reset.
DAILY_QUEST_RESET_AT=12:05

# Cron expression controlling medal distribution.
MEDAL_DISTRIBUTION_CRON="0 */6 * * *"

################################################################################
# Game Runtime Flags
################################################################################

# Optional ISO8601 timestamp indicating game start time.
GAME_START_TIME=null

# Set to true to present the scheduled maintenance banner globally.
GAME_MAINTENANCE_ENABLED=false

################################################################################
# Fortify Frontend
################################################################################

# Vite application name injected into the JS bundle.
VITE_APP_NAME="${APP_NAME}"

################################################################################
# Travian Legacy Bridge
################################################################################

# Default Travian language key (us, ru, etc).
TRAVIAN_DEFAULT_LANGUAGE=us

# Default Travian timezone identifier.
TRAVIAN_DEFAULT_TIMEZONE=Australia/Sydney

# Text direction (LTR or RTL).
TRAVIAN_DEFAULT_DIRECTION=LTR

# Default Travian date format.
TRAVIAN_DEFAULT_DATE_FORMAT=y.m.d

# Default Travian time format.
TRAVIAN_DEFAULT_TIME_FORMAT=H:i

# Public marketing homepage URL.
TRAVIAN_INDEX_URL=https://www.example.com/

# Forum URL displayed in navigation.
TRAVIAN_FORUM_URL=https://forum.example.com/

# Knowledge base / answers URL.
TRAVIAN_ANSWERS_URL=https://answers.travian.com/index.php

# Help center URL.
TRAVIAN_HELP_URL=https://help.example.com/

# Administrative contact email.
TRAVIAN_ADMIN_EMAIL=admin@example.com

# Session timeout in seconds used by the legacy engine.
TRAVIAN_SESSION_TIMEOUT=21600

# Default payment provider location identifier.
TRAVIAN_DEFAULT_PAYMENT_LOCATION=2

# CSS class name injected into the legacy templates.
TRAVIAN_GLOBAL_CSS_CLASS=travian-world

# reCAPTCHA site key for the classic frontend.
TRAVIAN_RECAPTCHA_PUBLIC_KEY=

# reCAPTCHA secret key for the classic frontend.
TRAVIAN_RECAPTCHA_PRIVATE_KEY=

# Static gpack asset path used by the legacy engine.
TRAVIAN_GPACK_PATH=/travian/sections/gpack/gpack.php

# Memcached host used by the legacy engine cache.
TRAVIAN_CACHE_HOST=127.0.0.1

# Memcached port used by the legacy engine cache.
TRAVIAN_CACHE_PORT=11211

# Global database hostname for shared legacy services.
TRAVIAN_GLOBAL_DB_HOST=127.0.0.1

# Global database username for shared legacy services.
TRAVIAN_GLOBAL_DB_USERNAME=root

# Global database password for shared legacy services.
TRAVIAN_GLOBAL_DB_PASSWORD=

# Global database name for shared legacy services.
TRAVIAN_GLOBAL_DB_DATABASE=travian_global

# Charset used by the legacy global database.
TRAVIAN_GLOBAL_DB_CHARSET=utf8mb4

# Automatically reinstall worlds (true/false).
TRAVIAN_AUTO_REINSTALL=false

# Delay before triggering auto reinstall (minutes).
TRAVIAN_AUTO_REINSTALL_START_AFTER=0

# Legacy engine entry script filename.
TRAVIAN_ENGINE_FILENAME=engine.php

# Travian world identifier (e.g. s1).
TRAVIAN_WORLD_ID=s1

# Travian server display name.
TRAVIAN_SERVER_NAME="Travian T4.6"

# Travian game world URL.
TRAVIAN_GAME_WORLD_URL=https://game.example.com/

# Travian server title shown in UI.
TRAVIAN_WORLD_TITLE="Travian T4.6 World"

# Game speed multiplier (1 = normal).
TRAVIAN_GAME_SPEED=1

# Round length in days for seasonal resets.
TRAVIAN_ROUND_LENGTH=200

# Secure hash shared with classic engine for auth handshake.
TRAVIAN_SECURE_HASH=

# Allows task runner interruption (true/false).
TRAVIAN_ALLOW_INTERRUPTION=true

# Cache store name for Travian world configuration.
TRAVIAN_CACHE_STORE=redis

# Cache key used for Travian world configuration.
TRAVIAN_WORLD_CONFIG_CACHE_KEY=travian.world_config

# TTL in seconds for Travian world configuration cache.
TRAVIAN_WORLD_CONFIG_TTL=300

# Disables legacy bootstrap (useful for pure Laravel contexts).
TRAVIAN_DISABLE_BOOTSTRAP=false

# Global cache key used when computing shared cache entries.
TRAVIAN_GLOBAL_CACHE_KEY=

# PHP binary used by the TaskWorker CLI.
TRAVIAN_TASK_WORKER_PHP_BINARY=/usr/bin/php

################################################################################
# Boost & Tooling
################################################################################

# Toggles Laravel Boost features.
BOOST_ENABLED=true

# Enables automatic watching of browser logs.
BOOST_BROWSER_LOGS_WATCHER=false

################################################################################
# Debugbar Advanced Options (optional overrides)
################################################################################

# Set to true to automatically record AJAX timing information.
DEBUGBAR_CAPTURE_AJAX=false

# Set to true to inject Debugbar assets automatically.
DEBUGBAR_INJECT=true

# Enables vendor data collection for Debugbar.
DEBUGBAR_INCLUDE_VENDORS=false

# Editor link used by Debugbar (phpstorm, vscode, etc).
DEBUGBAR_EDITOR=vscode
